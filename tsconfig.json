{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noLib": false,
    "jsx": "preserve",
    "target": "ES6",
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/__test__", "dist/**"]
}
